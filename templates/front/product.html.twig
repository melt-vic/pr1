{% extends 'base.html.twig' %}
{% block title %}{{ product.getName() }} - Tienda UOC{% endblock %}
{% block body %}
<div class="container my-4">
    <div class="row">
        <div class="col-md-6">
            <img src="{{ asset('assets/' ~ product.getImgPath()) }}" class="img-fluid" alt="{{ product.getName() }}" />
            <p><strong>Precio: {{ product.getPrice() / 100 }} EUR</strong></p>
            <a href="{{ path('cart_add', {'id' : product.getId()}) }}" class="btn btn-primary">AÃ±adir al carrito</a>
            <a href="{{ path('category', {'id' : product.getCategory().getId(), 'name' : product.getCategory().getName()|url_encode}) }}"
               class="btn btn-secondary">Volver</a>
        </div>
        <div class="col-md-6">
            <h1>{{ product.getName() }}</h1>
            <p class="lead">{{ product.getDescription()|raw }}</p>


        </div>
    </div>
</div>
{% endblock %}
